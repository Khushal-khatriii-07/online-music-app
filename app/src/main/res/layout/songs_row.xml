<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/row_back"
    android:focusable="true"
    >

   <ImageView
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_marginEnd="10dp"
       android:layout_centerVertical="true"
       android:src="@drawable/music_placeholder"
       android:id="@+id/iv_artwork"
      >
   </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:text="@string/songs_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingEnd="50dp"
        android:layout_toEndOf="@+id/iv_artwork"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/iv_artwork"
        android:layout_toEndOf="@+id/iv_artwork"
        android:text="@string/artiste"
        android:layout_below="@+id/tv_title"
        android:id="@+id/tv_artist"
        >

    </TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:id="@+id/tv_duration"
        android:text="3:05"
        >

    </TextView>

    <ImageView
        android:id="@+id/iv_play_active"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_duration"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="6dp"
        android:src="@drawable/ic_play_circle_outline_white"
        >

    </ImageView>

</RelativeLayout>